<section class="container text-center">

<p style="color: green"><%= notice %></p>

<h1>Tweets</h1>
<br>

<%= form_with url: tweets_path, method: :get do |form|%>
 <%= form.text_field :query_text, placeholder: ('Busqueda'), value: params[:query_text]%>
<%end%>
<br>

<div id="tweets">
  <% @tweets.each do |tweet| %>
    <%= render tweet %>
    <p>
      <%= link_to "Mostrar Tweet", tweet, class:"btn btn-primary" %>
    </p>
  <% end %>
</div>

<%= link_to "Nuevo Tweet", new_tweet_path, class:"btn btn-primary" %>

<%=raw pagy_bootstrap_nav(@pagy)%>
<br><br>

</section>
